{% import "macros/__index.njk" as macro %}

{% set navPages = collections.all | eleventyNavigation %}


{% if accueil %}
    <img src="/media/image/aipe-logo-horizontal.svg" alt="{{ metadata.title }}" width="150">
{% else %}
    <a href="/">
        <img src="/media/image/aipe-logo-horizontal.svg" alt="{{ metadata.title }}" width="150">
    </a>
{% endif %}

<nav class="menu" role="navigation" aria-label="Menu principal">
    <ul class="reset df fw-w gap">
        {%- for entry in navPages %}
            <li>
                {% if entry.url == page.url %}
                    <a class="" href="{{ entry.url | url }}" aria-current="page">
                        {{ entry.title }}
                    </a>
                {% else %}
                    <a class="" href="{{ entry.url | url }}">
                        {{ entry.title }}
                    </a>
                {% endif %}
                
            </li>
        {%- endfor %}
    </ul>
</nav>

<ul class="reset df fw-w gap">
    <li>
         {{ macro.button_icon("https://www.facebook.com/aiperam", "Facebook", "facebook", "parent") }}
    </li>
    <li>
         {{ macro.button_icon("https://www.instagram.com/aipe.38", "Instagram", "instagram", "enfant") }}
    </li>
</ul>