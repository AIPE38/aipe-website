{% macro logo_partenaire(img="", alt="") %}

    {% set classes = [
        "round-top-left",
        "round-top-right",
        "round-bottom-right",
        "round-all",
        "round-left",
        "round-right",
        "round-bottom-left",
        ""
    ] %}

    {% set randomClass = classes | random %}

    <div class="logo-partenaire {{ randomClass }} df ai-c jc-c" title="{{ alt }}">
        {% if img %}
            <img src="{{ img }}" alt="{{ alt }}" loading="lazy" decoding="async">
        {% else %}
            <p class="text-20">{{ alt }}</p>
        {% endif %}
    </div>

{% endmacro %}