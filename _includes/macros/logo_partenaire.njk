{% macro logo_partenaire(img="", alt="", url="") %}

    {% set classes = [
        "round-top-left",
        "round-top-right",
        "round-bottom-right",
        "round-all",
        "round-left",
        "round-right",
        "round-bottom-left",
        ""
    ] %}

    {% set randomClass = classes | random %}

    {% if url %}
        <a href="{{ url }}" class="logo-partenaire {{ randomClass }} df ai-c jc-c" aria-label="En savoir plus sur {{ alt }}" target="_blank" rel="noopener">       
            {% if img %}
                <img src="{{ img }}" alt="{{ alt }}" loading="lazy" decoding="async" title="{{ alt }}">
            {% else %}
                <p class="text-20">{{ alt }}</p>
            {% endif %}
        </a>
    {% else %}
        <div class="logo-partenaire {{ randomClass }} df ai-c jc-c">
            {% if img %}
                <img src="{{ img }}" alt="{{ alt }}" loading="lazy" decoding="async" title="{{ alt }}">
            {% else %}
                <p class="text-20">{{ alt }}</p>
            {% endif %}
        </div>
    {% endif %}

{% endmacro %}