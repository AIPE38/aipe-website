{% macro intercalaire(theme='') %}

    {% if theme == 'parent' %}
        {% set cssTheme = " theme-parent" %}
    {% elif theme == 'enfant' %}
        {% set cssTheme = " theme-enfant" %}
    {% elif theme == 'pro' %}
        {% set cssTheme = " theme-pro" %}
    {% else %}
        {% set cssTheme = " theme-neutre" %}
    {% endif %}

    <div class="grid-main__item-full vague v_haut bg-theme{{cssTheme}}"></div>
    <div class="grid-main__item-full grid-main bg-theme pblock-section font-dancing text-38 color-theme{{cssTheme}}">
        {{ caller() }}
    </div>
    <div class="grid-main__item-full vague v_bas bg-theme{{cssTheme}}"></div>

{% endmacro %}