    #}
    <link rel="stylesheet" href="/style.css" />

    <link rel="preload" href="/Dancing-Script.woff2" as="font" type="font/woff2" crossorigin="anonymous">
    <link rel="preload" href="/Hero-Regular.woff" as="font" type="font/woff" crossorigin="anonymous">
    
    <meta name="format-detection" content="telephone=no">

    {% if nofollow %}
        <meta name="robots" content="noindex, nofollow">
    {% endif %}

    <meta name="robots" content="noindex, nofollow">

</head>