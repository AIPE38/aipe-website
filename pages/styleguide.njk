<div class="pblock-section">
    <h3 class="styleguide-h3">Matrix</h3>
        {% set demoMatrix2col = [
            { col1: "col1", col2: "col2" },
            { col1: "col1", col2: "col2" },
            { col1: "col1", col2: "col2" }
        ] %}
        {% set demoMatrix3col = [
            { col1: "col1", col2: "col2", col3: "col3" },
            { col1: "col1", col2: "col2", col3: "col3" },
            { col1: "col1", col2: "col2", col3: "col3" }
        ] %}
    <div class="reset df gap">
        <div class="theme-neutre">
            {{ matrix(datas=demoMatrix2col) }}
        </div>
        <div class="theme-parent">
            {{ matrix(datas=demoMatrix3col) }}
        </div>
        <div class="theme-enfant">
            {{ matrix(datas=demoMatrix2col) }}
        </div>
        <div class="theme-pro">
            {{ matrix(datas=demoMatrix2col) }}
        </div>
        <div class="theme-reverse bg-theme fg-theme">
            {{ matrix(datas=demoMatrix2col) }}
        </div>
        
    </div>
</div>